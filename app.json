{
  "id": "no.idlock",
  "sdk": 2,
  "name": {
    "en": "ID Lock Z-wave"
  },
  "version": "0.0.0",
  "compatibility": ">=1.5.0",
  "author": {
    "name": "Ted Tolboom",
    "email": "dTNL.Homey@gmail.com"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "email": "dtnl.homey@gmail.com",
        "currency": "EUR"
      }
    }
  },
  "description": {
    "en": "Adds support for ID Lock Z-wave devices"
  },
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "category": "security",
  "flow": {},
  "drivers": [
    {
      "id": "IDlock101",
      "class": "lock",
      "name": {
        "en": "ID Lock 101"
      },
      "capabilities": [
        "locked",
        "measure_battery",
        "alarm_battery"
      ],
      "images": {
        "large": "/drivers/IDlock101/assets/images/large.png",
        "small": "/drivers/IDlock101/assets/images/small.png"
      },
      "zwave": {
        "manufacturerId": [
          560
        ],
        "productTypeId": [
          48
        ],
        "productId": [
          1
        ],
        "wakeUpInterval": 3600,
        "learnmode": {
          "instruction": {
            "en": "Inclusion – (Puts your device in inclusion mode)\r\n• Push and hold button until all LEDs on keypad activates. (with ID Lock in an unlocked state)\r\n• Release button and press “8” on keypad.\r\nInclusion mode starts immediately. LED indicator below logo signals this by flashing blue. "
          }
        },
        "productDocumentation": "https://Products.Z-WaveAlliance.org/ProductManual/File?folder=&filename=Manuals/2293/IDL Operational Manual EN v1.3.pdf",
        "zwaveAllianceProductId": 2293,
        "imageRemotePath": "https://products.z-wavealliance.org/ProductImages/Index?productName=ZC10-17055585",
        "associationGroups": [
          1
        ],
        "associationGroupsOptions": {
          "1": {
            "hint": {
              "en": "Z-Wave Plus Lifeline"
            }
          }
        },
        "unlearnmode": {
          "instruction": {
            "en": "Exclusion – (Puts your device in exclusion mode)\r\n• Push and hold button until all LEDs on keypad activates. (with ID Lock in an unlocked state)\r\n• Release button and press “8” on keypad.\r\nExclusion mode starts immediately. LED indicator below logo signals this by flashing blue."
          }
        }
      },
      "settings": [
        {
          "id": "Doorlock_mode",
          "value": "1",
          "label": {
            "en": "Doorlock mode"
          },
          "hint": {
            "en": "Doorlock operational behaviour"
          },
          "zwave": {
            "index": 1,
            "size": 1
          },
          "values": [
            {
              "id": "0",
              "label": {
                "en": "Disabled Away mode and Manual locking mode"
              }
            },
            {
              "id": "1",
              "label": {
                "en": "Disabled Away mode and Automatic locking mode"
              }
            },
            {
              "id": "3",
              "label": {
                "en": "Away mode and Automatic locking mode"
              }
            },
            {
              "id": "2",
              "label": {
                "en": "Away mode and Manual locking mode"
              }
            }
          ],
          "type": "dropdown"
        },
        {
          "id": "RFID_configuration",
          "value": "0",
          "label": {
            "en": "RFID Configuration Set and Report"
          },
          "hint": {
            "en": "This parameter configures RFID cards to work with the door lock by setting the parameter to specific values.  After setting an RFID card to the door lock, the result and configuration can be read."
          },
          "zwave": {
            "index": 2,
            "size": 2
          },
          "values": [
            {
              "id": "1",
              "label": {
                "en": "Begin RFID Card Registration"
              }
            },
            {
              "id": "2",
              "label": {
                "en": "RFID Registration Failed"
              }
            },
            {
              "id": "3",
              "label": {
                "en": "Successful RFID Card Registration - 2nd byte contains Index Number"
              }
            },
            {
              "id": "5",
              "label": {
                "en": "RFID Card Registration Mode was not started"
              }
            },
            {
              "id": "6",
              "label": {
                "en": "RFID Card Registration Mode In Progress"
              }
            },
            {
              "id": "4",
              "label": {
                "en": "RFID Card Registration Mode Finished"
              }
            }
          ],
          "type": "dropdown"
        },
        {
          "id": "Doorlock_Hinge_Position",
          "value": "0",
          "label": {
            "en": "Door Hinge Position Mode"
          },
          "hint": {
            "en": "Parameter defines the door hinge position"
          },
          "zwave": {
            "index": 3,
            "size": 1
          },
          "values": [
            {
              "id": "0",
              "label": {
                "en": "Right"
              }
            },
            {
              "id": "1",
              "label": {
                "en": "Left"
              }
            }
          ],
          "type": "dropdown"
        },
        {
          "id": 10,
          "value": 0,
          "label": {
            "en": "Retrieve Registered User ID information"
          },
          "hint": {
            "en": "Configuration GET for retriving UID information\r\n\r\nRetrival of registered UIDs on parameter number 10 to 59\r\nParameter number is representing UID index\r\n\r\nEx. \r\nUID index 1 = parameter 10\r\nUID index 50 = parameter 59"
          },
          "zwave": {
            "index": 10,
            "size": 4
          },
          "attr": {
            "min": 10,
            "max": 59
          },
          "type": "number"
        }
      ]
    }
  ]
}
